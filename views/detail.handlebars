{{#section 'main'}}
<div class="main-header" style='background-image: url({{place.imagepath}});'>
  <h1>{{place.name}}</h1>
  <h2 class="mt-3">
    <i class="fa fa-map-marker-alt" aria-hidden="true"></i> {{place.streetnumber}} {{place.streetname}} {{place.district}} {{place.city}}
  </h2>
  <h2><i class="fas fa-clock " aria-hidden="true"></i>{{place.opentime}}</h2>
  <h2><i class="fa fa-phone" aria-hidden="true"></i> {{place.phone}}</h2>
</div>

<div class="main-card">
  <div class="main-card__item" >
    
    <div id = "stadiumList">
      {{#each place.Stadia}}
        <div class="yard-card row justify-content-center align-items-center">
          <div class="col-4">
            <img src="../assets/img/greenstadium.png" class="img-fluid" />
          </div>
          <div class="col-6">
            <h3 style="color:blue">
              {{name}} <button class="btn btn-light active" id = "{{id}}">Xem</button>
            </h3>
            {{#ifEqual StadiumTypeId 1}}
            <h4>Loại sân: Sân 5</h4>
            {{/ifEqual}}
            {{#ifEqual StadiumTypeId 2}}
            <h4>Loại sân: Sân 7</h4>
            {{/ifEqual}}
            {{#ifEqual StadiumTypeId 3}}
            <h4>Loại sân: Sân 11</h4>
            {{/ifEqual}}
            <h4>Giá: {{commonPrice}} </h4>
          </div>
        </div>
      {{/each}}
    </div><nav>
      {{{paginate pagination paginationClass="pagination justify-content-center m-5"}}}
    </nav>
    
  </div>

  <div class="main-card__item" style="display: none">
    
    <div id = "mydate" class=" input-group input-group-lg  datepicker " >
      <input
        type="text"
        class="form-control"
        id="#date_in"
        title="Chọn ngày"
        placeholder="Chọn ngày.."
        data-input
      />
      <a class="input-button btn btn-light" title="Chọn ngày" data-toggle>
        <i class="fa fa-calendar" style="color:#444444" aria-hidden="true"></i>
      </a>
    </div>




    <div class="main-overview" >

      <div id = "session1" class="overviewcard bg-light  ">
