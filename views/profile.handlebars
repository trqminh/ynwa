<script src="../assets/js/searchbar.js"></script>
<script src="../assets/js/profile.js"></script>
{{/section}}

{{#section 'main'}}
<div class="main-cards">
    <div class="card justify-content-start">
        <div class="row justify-content-center align-items-center">
            <div class="col-4">
                <img class="img-fluid rounded-circle overflow-hidden" style="height: 80px; width: 80px;"
                    src={{user.imagepath}} />
            </div>
            <div class="col-8">
                <h3><b>{{user.name}}</b></h3>
            </div>
        </div>
        <hr />
        <button class="btn btn-primary mt-3" onclick="window.location.href='/users/profile'">
            <i class="fas fa-user-alt"></i>&nbsp;Tài khoản của tôi
        </button>
        <button class="btn btn-light mt-3" onclick="window.location.href='/users/history'">
            <i class="fa fa-calendar" aria-hidden="true"></i>&nbsp;Lịch đặt
            của tôi
        </button>
        <button class="btn btn-light mt-3">
            <i class="fa fa-bell" aria-hidden="true"></i>&nbsp; Thông báo
        </button>
    </div>

    <div class="card">
        <h2>Thông tin cá nhân</h2>
        <p>Điền thông tin hồ sơ để YNWA phục vụ bạn tốt hơn</p>

        <div class="row">
            <div class="col-5 d-flex flex-column align-items-center justify-content-center">
                <img src="../assets/img/user1.jpg" class="img-fluid
                rounded-circle" style="width:200px;height:200px;object-fit: cover" />
                <button class="btn btn-primary btn-lg mt-5" id="btnUpdate">Cập nhật</button>
            </div>

            <div class="col-7">
                <div>
                    <p>Họ tên</p>
                    <input type="text" class="form-control" placeholder="{{user.name}}" id="name" />
                </div>
                <div class="mt-3">
                    <p>Địa chỉ</p>
                    <input type="text" class="form-control" placeholder="{{user.address}}" id="address" />
                </div>
                <div class="mt-3">
                    <p>Số điện thoại</p>
                    <input type="text" class="form-control" placeholder="{{user.phone}}" id="phone" />
                </div>
            </div>
        </div>
    </div>
</div>
{{/section}}