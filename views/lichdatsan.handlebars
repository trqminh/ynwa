{{#section 'main'}}
<div class="main-cards">
  <div class="card">
    <h5 class="text-center"><b>Bộ lọc</b></h5>
    <p>Ngày</p>
    <div class="row justify-content-between">
      <div class="col-6 flatpickr input-group datepicker">
        <input type="text" class="form-control" title="Ngày Bắt Đầu" placeholder="Chọn ngày.." data-input />
        <a class="input-button btn btn-light" title="Ngày Bắt Đầu" data-toggle>
          <i class="fa fa-calendar" aria-hidden="true"></i>
        </a>
      </div>
      <div class="col-6 flatpickr input-group datepicker">
        <input type="text" class="form-control" title="Ngày Kết Thúc" placeholder="Chọn ngày.." data-input />
        <a class="input-button btn btn-light" title="Ngày Kết Thúc" data-toggle>
          <i class="fa fa-calendar" aria-hidden="true"></i>
        </a>
      </div>
    </div>
    <p class="mt-3">Thời gian</p>
    <div class="row justify-content-between">
      <div class="col-6 flatpickr input-group timepicker">
        <input type="text" class="form-control" title="Thời gian bắt đầu" placeholder="Chọn thời gian.." data-input />
        <a class="input-button btn btn-light" title="Thời gian bắt đầu" data-toggle>
          <i class="fas fa-clock" aria-hidden="true"></i>
        </a>
      </div>
      <div class="col-6 flatpickr input-group timepicker">
        <input type="text" class="form-control" title="Thời gian kết thúc" placeholder="Chọn thời gian.." data-input />
        <a class="input-button btn btn-light" title="Thời gian kết thúc" data-toggle>
          <i class="fas fa-clock" aria-hidden="true"></i>
        </a>
      </div>
    </div>
    <p class="mt-3">Loại sân</p>
    <div>
      <select class="custom-select">
        <option selected>Sân 5 người</option>
        <option value="1">Sân 7 người</option>
        <option value="2">Sân 11 người</option>
      </select>
    </div>
    <p class="mt-3">Tên sân</p>
    <div>
      <select class="custom-select">
        <option selected>Mỹ Đình</option>
        <option value="1">Hàng Đẫy</option>
        <option value="2">Thiên Trường</option>
        <option value="3">Gò Đậu</option>
        <option value="4">Gia Lai</option>
      </select>
    </div>
    <p class="mt-3">Sắp xếp theo</p>
    <div>
      <select class="custom-select">
        <option selected>Ngày</option>
        <option value="1">Tên người đặt</option>
        <option value="2">Số tiền thanh toán</option>
      </select>
    </div>
    <button class="btn btn-primary mt-4">Áp dụng</button>
  </div>

  <div class="card">
    <table class="table table-striped text-center">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Tên người đặt</th>
          <th scope="col">Ngày</th>
          <th scope="col">Số tiền đã thanh toán</th>
        </tr>
      </thead>
      <tbody>
        {{#each orderDetails}}
        <tr>
          <th scope="row">Trần Quang Minh</th>
          <td>20/3/2019</td>
          <td>250k</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
